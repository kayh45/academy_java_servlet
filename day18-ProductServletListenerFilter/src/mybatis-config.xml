<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	<!-- DB 접속 정보 : url, username, password -->
	<properties>
		<property name="url" 	  value="jdbc:oracle:thin:@//127.0.0.1:1521/XE"/>
		<property name="username" value="SCOTT"/>
		<property name="password" value="TIGER"/>
		<property name="driver"   value="oracle.jdbc.OracleDriver"/>
	</properties>
	
	<!-- 사용자 정의 타입을 등록 Emp -->
	<typeAliases>
		<typeAlias type="shop.vo.Product" alias="Product"/>
	</typeAliases>
	
	<!-- DB 접속 환경 설정 -->
	<!-- !!!!!! enviroments의 default는 하위의 enviroment 중 하나의 id를 선택해야 한다 !!!!!! -->
	<environments default="oracleXE">
		<environment id="oracleXE">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="url" value="${url}" />
				<property name="username" value="${username}"/>
				<property name="password" value="${password}"/>
				<property name="driver" value="${driver}"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="shop/mapper/ProductMapper.xml"/>
	</mappers>
	
</configuration>
